{
    "workbench.iconTheme": "material-icon-theme",
    "editor.mouseWheelZoom": true,
    "editor.background": "#000",
    "tab.inactiveBackground": "#000",
    "sync.gist": "113c87551305c1f12be5eec49b009b02",
    "sync.autoUpload": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "ruby.intellisense": "rubyLocate",
    "workbench.editor.enablePreview": true,
    "cSpell.allowCompoundWords": true,


    "update.mode": "none",
    "cSpell.allowedSchemas": [
        "file",
        "untitled",
        "essay.txt"
    ],
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "git-commit",
        "go",
        "handlebars",
        "haskell",
        "html",
        "jade",
        "java",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "pug",
        "python",
        "restructuredtext",
        "ruby",
        "rust",
        "scala",
        "scss",
        "text",
        "txt",
        "typescript",
        "typescriptreact",
        "yaml",
        "yml"
    ],
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/objects/**",
        ".vscode",
        "notepad.rb"
    ],
    "cSpell.userWords": [
        "ahmedabad",
        "Amura",
        "andhrapradesh",
        "constantize",
        "crcs",
        "cslot",
        "form",
        "gsub",
        "instance",
        "karnataka",
        "klass",
        "kolkata",
        "kylas",
        "Mongoid",
        "review",
        "savon",
        "selldo",
        "sidekiq",
        "strftime",
        "titleize",
        "unfavourable",
        "vnum"
    ],
    "diffEditor.renderSideBySide": true,
    "diffEditor.ignoreTrimWhitespace": false,
    // "editor.renderWhitespace": "all",
    "files.trimTrailingWhitespace": true,
    "sync.removeExtensions": false,
    "files.restoreUndoStack": false,
    "window.title": "${dirty}${activeEditorLong}${separator}${rootName}${separator}${appName}",
    "files.associations": {
        "*.erb": "erb",
        "*.haml": "ruby"
    },
    "[javascript]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "git.confirmSync": false,
    "bracket-pair-colorizer-2.depreciation-notice": false,
    "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 18,
    "debug.showBreakpointsInOverviewRuler": true,
    "explorer.confirmDelete": false,
    "workbench.startupEditor": "none",
    "[erb]": {
        "editor.defaultFormatter": "elia.erb-formatter"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "files.autoSave": "afterDelay",
    "workbench.colorTheme": "Victor's Dark Horizon",
    "workbench.preferredDarkColorTheme": "Victor's Dark Horizon",
    // "workbench.preferredLightColorTheme":"Default Light+",
    "workbench.colorCustomizations": {
        "editor.background": "#000000",
        "editorGroupHeader.tabsBackground": "#000",
        "foreground": "#fff",
        "editor.foreground": "#ffc578",
        "activityBar.background": "#000000",
        "activityBar.foreground": "#ff6c6c",
        "sideBar.background": "#000",
        "sideBar.foreground": "#c1c1c1",
    },
    "window.zoomLevel": 1
}
